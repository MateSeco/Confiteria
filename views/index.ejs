<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Memé de Santis</title>

    <%- include("./partials/headers.ejs"); %>
  </head>
  <body>
    <header class="header">
      <%- include("./partials/nav.ejs"); %>

      <div class="header-image">
        <div class="header-content">
          <h1>Confitería</h1>
        </div>
      </div>
    </header>
    <main class="">
      <section class="about-us container" id="about-us">
        <h2>Quiénes somos</h2>
        <%- include("./partials/about-us.ejs"); %>
      </section>

      <div class="intersections-image intersections1"></div>

      <section class="products container" id="products">
        <h2>Productos</h2>
        <div class="row">
          <% products.forEach((product) => { %>
          <div class="col-12 col-lg-4">
            <%-include("./partials/product-card.ejs", {product}); %>
          </div>
          <% }); %>
        </div>
      </section>

      <div class="intersections-image intersections2"></div>

      <section class="contact-us container" id="contact-us">
        <h2>Contáctanos</h2>
        <div class="row align-items-center">
          <div class="col-lg-6">
            <span>
              <i class="far fa-clock"></i> L. a V. de 08:00 a 17:00 hs</span
            >
            <br />
            <span> <i class="fas fa-phone"></i> 011 4765-8758 </span>
            <br />
            <span>
              <a href="https://goo.gl/maps/awwRHXWVC9De2pHz8" class="ubicacion"
                ><i class="fas fa-map-marker-alt"></i> Av. de Mayo 339, Villa
                Adelina, Provincia de Buenos Aires</a
              >
            </span>
          </div>
          <div class="col-lg-6">
            <div class="iframe-container">
              <iframe
                src="https://www.google.com/maps/d/u/0/embed?mid=1cVloyyOxJ4tjOYJLwopl7qSivsplvoTL"
              ></iframe>
            </div>
          </div>
        </div>
      </section>
    </main>
    <footer class="footer">
      <div class="container text-light">
        <div class="row">
          <div class="col-12 col-lg-4">Una columna</div>
          <div class="col-12 col-lg-4">Otra columna</div>
          <div class="col-12 col-lg-4">Tercera columna</div>
        </div>
        <hr />
        <div class="row">
          <div class="col text-center">Aca unas palabras</div>
        </div>
      </div>
    </footer>
    <%- include("./partials/scripts.ejs") %>
  </body>
</html>
